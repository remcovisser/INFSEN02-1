{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "internalConsole",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/src/app.ts",
      "preLaunchTask": "tsc",
      "outFiles": [
        "${workspaceRoot}/dest/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 5858,
      "outFiles": []
    }
  ]
}